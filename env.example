# Job Parser System - Environment Variables
# Скопируйте этот файл в .env и заполните своими значениями

# Основные настройки Flask
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=false

# База данных
DATABASE_URL=sqlite:///data/vacancies.db

# SuperJob API (опционально)
SUPERJOB_SECRET=your-superjob-api-secret

# Настройки парсеров
PARSER_TIMEOUT=30
PARSER_MAX_WORKERS=4
PARSER_DELAY=1

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Настройки безопасности
MAX_REQUESTS_PER_MINUTE=60
SESSION_TIMEOUT=3600

# Настройки экспорта
EXPORT_MAX_RECORDS=1000
EXPORT_TIMEOUT=300

# Настройки планировщика
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=3600

# Настройки мониторинга
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true 